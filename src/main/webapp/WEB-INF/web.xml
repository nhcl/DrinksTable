<web-app>
    <display-name>Widget Store</display-name>
    <servlet>
        <servlet-name>drink-details</servlet-name>
        <servlet-class>widgetstore.web.DrinkDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>web.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>drink-details</servlet-name>
        <url-pattern>/drinks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>logging-filter</filter-name>
        <filter-class>widgetstore.web.LoggingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>logging-filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>need-permission</filter-name>
        <filter-class>web.NeedPermissionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>need-permission</filter-name>
        <url-pattern>/drinks</url-pattern>
    </filter-mapping>
</web-app>